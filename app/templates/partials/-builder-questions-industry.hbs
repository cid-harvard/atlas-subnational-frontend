<div class="stream___head__menu">
  <div class="menu-section menu-section__thin">
    <h5 class='menu-section__group-name'>{{t 'header.overview'}}</h5>
    <ul class="menu-section__group">
      {{#link-to 'industry.show' model.id
        tagName='li'
        data-search-profile=''
        activeClass="menu-section__link--active"
        class="menu-section__link"}}
        {{ t 'pageheader.profile_link' }}
      {{/link-to}}
    </ul>
  </div>
  <div class="menu-section">
    <h5 class='menu-section__group-name'>{{t 'header.region'}}</h5>
    <ul class="menu-section__group">
      {{#link-to 'industry.visualization' model.id 'departments' 'multiples' 'employment'
        (query-params startDate=firstYear endDate=lastYear)
        classNameBindings="industryDepartmentEmployment:menu-section__link--active"
        class="menu-section__link"}}
        {{ t 'header.employment' }}
      {{/link-to}}
      {{#link-to 'industry.visualization' model.id 'departments' 'multiples' 'wages'
        (query-params startDate=firstYear endDate=lastYear)
        classNameBindings="industryDepartmentWage:menu-section__link--active"
        class="menu-section__link"}}
        {{t 'header.wage' }}
      {{/link-to}}
    </ul>
  </div>
  {{#unless isIndustryClass}}
    <div class="menu-section">
      <h5 class='menu-section__group-name'>{{t 'header.occupation'}}</h5>
      <ul class="menu-section__group">
        {{#link-to 'industry.visualization' model.id 'occupations' 'treemap' 'num_vacancies'
          (query-params startDate=lastYear endDate=lastYear)
          classNameBindings="industryOccupationsVacancies:menu-section__link--active"
          class="menu-section__link"}}
        {{ t 'header.employment' }}
        {{/link-to}}
      </ul>
    </div>
    <div class="menu-section menu-section__thin">
      <h5 class='menu-section__group-name'>{{t 'header.subregion'}}</h5>
      <ul class="menu-section__group">
      {{#link-to 'industry.visualization' model.id 'cities' 'multiples' 'employment'
        (query-params startDate=firstYear endDate=lastYear)
        classNameBindings="industryCitiesEmployment:menu-section__link--active"
        class="menu-section__link"}}
        {{ t 'header.employment' }}
      {{/link-to}}
      {{#link-to 'industry.visualization' model.id 'cities' 'multiples' 'wages'
        (query-params startDate=firstYear endDate=lastYear)
        classNameBindings="industryCitiesWage:menu-section__link--active"
        class="menu-section__link"}}
        {{t 'header.wage' }}
      {{/link-to}}
      </ul>
    </div>
  {{/unless}}
</div>
