<div class="buildermod__drawer buildermod__drawer--questions">
  <h4 class="builder__questions__header">Questions: Locations</h4>
  <ul class="builder__questions__list">
    <li class="builder__questions__item">
      <i class="icon-cidcon_multiples builder__questions__item__icon"></i>
      <div class="builder__questions__item__textwrap">
        <span {{action "closeDrawer"}}>
          {{#link-to 'visualization' entity_and_id 'departments' 'multiples' (query-params startDate=2008 variable='employment') class="builder__questions__question"}}
            {{t 'graph_builder.page_title.industry.departments.employment' name=name}}
          {{/link-to}}
        </span>
      </div>
    </li>
    <li class="builder__questions__item">
      <i class="icon-cidcon_multiples builder__questions__item__icon"></i>
      <div class="builder__questions__item__textwrap">
        <span {{action "closeDrawer"}}>
          {{#link-to 'visualization' entity_and_id 'departments' 'multiples' (query-params startDate=2008 variable='wages') class="builder__questions__question"}}
            {{t 'graph_builder.page_title.industry.departments.wages' name=name}}
          {{/link-to}}
        </span>
      </div>
    </li>
  </ul>
</div>